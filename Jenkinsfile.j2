                        sh '''
                          echo $PWD
                          echo $WORKSPACE
                          exit -1
                        '''
                  }     
                post {
                  failure{
                        script {
                          env.FAILURE_STAGE = 'Build Info'
                          @NonCPS
                          def errors = rawLog.eachLine {
                            if (it =~ /lerna ERR! /) {
                                println it  
                            }
                          }
                          println(${errors})
                          errorMsg = ${errors}
